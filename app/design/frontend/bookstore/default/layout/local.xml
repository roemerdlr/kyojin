<layout version="0.1.0">
    <default>
         <reference name="header">
            <block type="cms/block" name="topbar_cmslinks" as="topbar_cmslinks">
                <actions method="setBlockId">
                    <block_id>topbar_cmslinks</block_id>
                </actions>
            </block>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/bootstrap.min.css</name>
            </action> 
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery-1.11.3.js</name>
            </action>  
            <action method="addItem">
                <type>skin_js</type>
                <name>js/bootstrap.min.js</name>
            </action>                    
            <action method="addItem">
                <type>skin_js</type>
                <name>js/scripts.js</name>
            </action>
        </reference>
       
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-left.phtml</template>
            </action>
        </reference>
    </default>
</layout>
